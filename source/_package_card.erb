<a href="/<%= package.namespace %>/<%= package.name %>/latest/" class="tile">
  <div class="tile-content">
    <div class="tile-body" style="padding: 30px 30px 30px 60px">
      <div class="tile-graphic">
         <%= image_tag(package.assets.logo, {alt: package.name}) %>
      </div>
      <div class="tile-text">
         <h4 style="color: #3b3f43"><%= package.name %></h4>
         <p style="color: #767d85"><%= package.description %></p>
      </div>
    </div>
  </div>
</a>
