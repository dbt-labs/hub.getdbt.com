<header class="header">
  <% if is_hidden(package, version) or (defined?(package.redirectnamespace) or defined?(package.redirectname)) %>
    <div class="row">
      <div class="col-md-12" style="padding:0px;">
        <%= partial "hidden" %>
      </div>
    </div>
  <% end %>
  <%= partial "nav" %>
  <section class="section white section-slim" style="padding-bottom:66px;">
  </section>
</header>

<main class="main">
  <section class="section white section-slim">
    <div class="section-content">

      <div class="package-header">
        
        <!-- Left column: Package info -->
        <div class="package-info">
          <div class="tile-body" style="box-shadow: none; overflow: visible">
            <div class="tile-graphic">
              <%= image_tag(package.assets.logo, {alt: package.name}) %>
            </div>
            <div class="tile-text">
              <div class="package-title-row">
                <h1><%= package.name %></h1>
              </div>
              <em>
                Created by
                <a href="<%= site_url %>/<%= package.namespace %>/"
                   target="_self">
                  <%= package.namespace %>
                </a>
              </em><br/>
              <div class="github-fusion-row">
                <% if is_valid_github_url(version._source.url) %>
                <a class="github-button"
                   href="<%=version._source.url.split("/tree/")[0]%>"
                   data-size="large"
                   data-show-count="true"
                   aria-label="Star the package on GitHub"
                   target="_blank">
                  <i data-icon="star"></i>
                  <%= version._source.url.split("/")[3] %>/<%= version._source.url.split("/")[4] %>
                </a>
                <% end %>
                <% if is_fusion_compatible(package, version) %>
                  <span class="fusion-badge">Fusion compatible</span>
                <% else %>
                  <span class="fusion-badge-incompatible">Not Fusion compatible</span>
                <% end %>
              </div>
              <em><%= package.versions[package.latest].description %></em>
            </div>
          </div>
        </div>
        
        <!-- Right column: Version selector -->
        <div class="package-version-selector">
          <div class="form-group">
            <label for="version-dropdown">Version</label>
            <div class="custom-version-dropdown" id="version-dropdown">
              <button type="button" class="custom-dropdown-toggle" aria-haspopup="listbox" aria-expanded="false">
                <span class="dropdown-selected-text">
                  <%= version.version %><% if version.version == package.latest %> (latest)<% end %>
                  <% if is_fusion_compatible(package, version) %>
                    <%= image_tag('fusion_atom.svg', {alt: 'Fusion compatible', class: 'fusion-icon'}) %>
                  <% end %>
                </span>
                <span class="dropdown-arrow">â–¼</span>
              </button>
              <ul class="custom-dropdown-menu" role="listbox">
                <% for local_version, local_package_version in package.versions.sort_by { |key, _val| Gem::Version.new(key) }.reverse %>
                <li role="option" 
                    data-value="/<%= package.namespace %>/<%= package.name %>/<%= local_version %>"
                    <% if local_version == version.version %>class="selected"<% end %>>
                  <span class="option-text">
                    <%= local_version %><% if local_version == package.latest %> (latest)<% end %>
                  </span>
                  <% if is_fusion_compatible(package, local_package_version) %>
                    <%= image_tag('fusion_atom.svg', {alt: 'Fusion compatible', class: 'fusion-icon'}) %>
                  <% end %>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        
      </div>

      <hr/>

      <div class="package-content-layout">
        <!-- Right column: Fusion Compatibility (HTML placed first to avoid <base> tag issues, CSS order:2) -->
        <% if defined?(version.fusion_compatibility) && version.fusion_compatibility %>
        <div class="package-sidebar">
          <div class="fusion-compatibility-section">
            <div class="fc-header">
              <div class="fc-header-icon">
                <%= image_tag('fusion_atom.svg', {alt: 'Fusion', class: 'fc-atom-icon'}) %>
              </div>
              <h3>Fusion compatibility</h3>
            </div>

            <!-- Set by package maintainer -->
            <div class="fc-group">
              <div class="fc-group-label">Set by package maintainer</div>
              <div class="fc-block">
                <div class="fc-row">
                  <span class="fc-label">Package version</span>
                  <code class="fc-code"><%= version.version %><% if version.version == package.latest %> (latest)<% end %></code>
                </div>
                <div class="fc-row">
                  <span class="fc-label">require-dbt-version</span>
                  <% if version.require_dbt_version.nil? || (version.require_dbt_version.is_a?(Array) && version.require_dbt_version.empty?) || (version.require_dbt_version.is_a?(String) && version.require_dbt_version.strip.empty?) %>
                    <span class="fc-status fc-status--warning">
                      <%= image_tag('status_error.svg', {alt: 'Not defined', class: 'fc-status-icon'}) %>
                      Not defined
                    </span>
                  <% elsif is_require_dbt_version_fusion_compatible(version.require_dbt_version) %>
                    <span class="fc-status fc-status--success">
                      <%= image_tag('status_success.svg', {alt: 'Compatible', class: 'fc-status-icon'}) %>
                      Compatible
                    </span>
                  <% else %>
                    <span class="fc-status fc-status--error">
                      <%= image_tag('status_error.svg', {alt: 'Not compatible', class: 'fc-status-icon'}) %>
                      Not compatible
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Automated tests -->
            <div class="fc-group">
              <div class="fc-group-label">Automated tests</div>
              <div class="fc-block">
                <div class="fc-row">
                  <span class="fc-label">Parse compatibility</span>
                  <% if version.fusion_compatibility.parse_compatible %>
                    <span class="fc-status fc-status--success">
                      <%= image_tag('status_success.svg', {alt: 'Passed', class: 'fc-status-icon'}) %>
                      Passed
                    </span>
                  <% else %>
                    <span class="fc-status fc-status--error">
                      <%= image_tag('status_error.svg', {alt: 'Failed', class: 'fc-status-icon'}) %>
                      Failed
                    </span>
                  <% end %>
                </div>
                <% if version.fusion_compatibility.parse_compatibility_result %>
                <div class="fc-row">
                  <span class="fc-label">Tested with Fusion</span>
                  <code class="fc-code"><%= version.fusion_compatibility.parse_compatibility_result.fusion_version %></code>
                </div>
                <div class="fc-row fc-row--link">
                  <a href="https://github.com/dbt-labs/hub.getdbt.com/blob/master/data/packages/<%= package.namespace %>/<%= package.name %>/versions/<%= version.id.split('/').last %>.json" class="fc-link" target="_blank">View full parse test results</a>
                </div>
                <% end %>
              </div>
            </div>

            <!-- Footer help text -->
            <p class="fc-footer">
              If you are the package maintainer and see unexpected conformance errors, check 
              <a href="https://docs.getdbt.com/docs/dbt-versions/core-versions" class="fc-link">conformance documentation</a> 
              and raise a PR 
              <a href="https://github.com/dbt-labs/hub.getdbt.com/edit/master/data/packages/<%= package.namespace %>/<%= package.name %>/versions/<%= version.id.split('/').last %>.json" class="fc-link" target="_blank">here</a>
            </p>
          </div>
        </div>
        <% end %>

        <!-- Left column: Installation and README (CSS order:1) -->
        <div class="package-main-content">
          <div class="row">
            <div class="col-md-12">
              <h3>Installation</h3>
              
              dbt version required: <%=
              if version.require_dbt_version != nil && version.require_dbt_version.length() > 0
                then 
                  if version.require_dbt_version.kind_of?(Array)
                    "<code>" + version.require_dbt_version.join(', ') + "</code>"
                  else
                    "<code>" + version.require_dbt_version + "</code>"
                  end
                else
                  "Not defined" 
                end
            %>

              <p>Include the following in your <code>packages.yml</code> file:
              <pre id='install'>
packages:
  - package: <%= package.namespace %>/<%= package.name %>
    version: <%= version.version %></pre>
              <p> Run <code>dbt deps</code> to install the package.
              <p> For more information on using packages in your dbt project, check out the <a href="https://docs.getdbt.com/docs/package-management">dbt Documentation</a>.
              <p><strong>Important Notice:</strong> dbt Labs does not certify or confirm the integrity, operability, effectiveness, or security of any Packages. Please read the <a href="<%= site_url %>/disclaimer">dbt Labs Package Disclaimer</a></p>
            </div>
          </div>

          <div class="row" style="margin-top: 20px;">
            <div class="col-md-12">
              <h3>README</h3>
              (<a href="<%= version._source.url %>">View on GitHub</a>)
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-12">
              <base href="<%= package.versions[package.latest]._source.url %>"
                    target="_blank">
              <article id="readme" class='markdown-body'>
                <div class="loading">
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>
</main>

<script>
  $.get('<%= version._source.readme %>').done(function(data) {
      document.getElementById('readme').innerHTML = marked.parse(data)

  });
  $('#install').each(function(i, block) {
    hljs.highlightBlock(block);
  });

  // Custom version dropdown behavior
  (function() {
    var dropdown = document.getElementById('version-dropdown');
    if (!dropdown) return;
    
    var toggle = dropdown.querySelector('.custom-dropdown-toggle');
    var menu = dropdown.querySelector('.custom-dropdown-menu');
    var options = Array.from(dropdown.querySelectorAll('li[role="option"]'));
    var focusIdx = options.findIndex(o => o.classList.contains('selected'));
    
    function close() { menu.classList.remove('open'); toggle.setAttribute('aria-expanded', 'false'); }
    
    function setFocus(idx) {
      options.forEach(o => o.classList.remove('focused'));
      focusIdx = (idx + options.length) % options.length;
      options[focusIdx].classList.add('focused');
      options[focusIdx].scrollIntoView({ block: 'nearest' });
    }
    
    function go(el) {
      var url = el.getAttribute('data-value');
      if (url && /^\/[\w.\/-]+$/.test(url)) window.location.href = window.location.origin + url;
    }
    
    toggle.addEventListener('click', e => {
      e.stopPropagation();
      var opening = !menu.classList.contains('open');
      menu.classList.toggle('open');
      toggle.setAttribute('aria-expanded', opening);
      if (opening) setFocus(Math.max(0, focusIdx));
    });
    
    options.forEach(o => o.addEventListener('click', () => go(o)));
    document.addEventListener('click', e => { if (!dropdown.contains(e.target)) close(); });
    
    toggle.addEventListener('keydown', e => {
      var isOpen = menu.classList.contains('open');
      if (e.key === 'ArrowDown' || e.key === 'ArrowUp') {
        e.preventDefault();
        if (!isOpen) { menu.classList.add('open'); toggle.setAttribute('aria-expanded', 'true'); }
        setFocus(focusIdx + (e.key === 'ArrowDown' ? 1 : -1));
      } else if (e.key === 'Enter' && isOpen) {
        e.preventDefault();
        go(options[focusIdx]);
      } else if (e.key === 'Escape') close();
    });
  })();
</script>
